<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:fitsSystemWindows="true"
    android:background="#333333">

    <!-- Spacer view minimized -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/transparent" />

    <!-- Meal dropdown -->
    <Spinner
        android:id="@+id/spinner_meal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:entries="@array/meal_types"
        android:spinnerMode="dropdown" />

    <!-- Description input -->
    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="16dp"
        android:hint="Description (e.g., banana)"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <!-- Input fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <EditText
            android:id="@+id/et_calories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Calories"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
        <EditText
            android:id="@+id/et_protein"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Protein (g)"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />
    </LinearLayout>

    <!-- Log Meal and Delete buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minHeight="48dp"
            android:maxLines="1"
            android:text="Log Meal"
            style="@style/Widget.App.Button"
            android:layout_marginEnd="8dp" />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minHeight="48dp"
            android:maxLines="1"
            android:text="Delete"
            android:enabled="false"
            style="@style/Widget.App.Button" />
    </LinearLayout>

    <!-- Today's Meals section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/tv_today_meals_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Today's Meals"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_today_meals"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#333333" />
    </LinearLayout>

    <!-- Daily Totals and Calculate buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        android:padding="16dp">
        <Button
            android:id="@+id/btn_daily_totals"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minHeight="48dp"
            android:maxLines="1"
            android:text="Daily Totals"
            style="@style/Widget.App.Button"
            android:layout_marginEnd="8dp" />
        <Button
            android:id="@+id/btn_calculator"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minHeight="48dp"
            android:maxLines="1"
            android:text="Calculate"
            style="@style/Widget.App.Button" />
    </LinearLayout>
</LinearLayout>